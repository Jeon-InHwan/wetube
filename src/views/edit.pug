extends base.pug
include mixins/video.pug 

block content    
    form(method="POST")
        input(
              placeholder="Video Title" 
              name="title" 
              value=video.title, 
              required
              )
        input(
              type="text",
              value=video.description,
              placeholder="Description",
              name="description", 
              minlength=20
              required
              )
        input(
              type="text",
              value=video.hashtags.join()
              placeholder="Hashtags, separated by comma.",
              name="hashtags", 
              required
              )
        input(type="submit", value="Save")